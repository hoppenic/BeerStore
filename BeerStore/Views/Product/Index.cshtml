
<!-- This is simply a enumerator going over the Product model/class-->
@model IEnumerable<Product>



@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var product in Model)
    {
        <h3>@product.Name</h3>
        <h3>@product.Description</h3>
        <h3> @product.Image</h3>

        //ternary operator
       <h3>@(product.Price.HasValue ? product.Price.Value.ToString("C"): "No Price")</h3>

       <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@product.ID"> View This Product</a>

       <form method="post" asp-action="Details">
           <input name="ID" value="@product.ID" type="hidden"/>
           <input type="submit" class="btn btn-primary" value="Add item to cart" />
        </form>
    }



    </div>



